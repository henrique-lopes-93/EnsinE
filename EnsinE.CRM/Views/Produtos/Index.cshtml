@model IEnumerable<EnsinE.CRM.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h1>Cursos Disponíveis</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comissao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comissao)
            </td>
            <td>
            
                    <a asp-action="Details" asp-route-id="@item.ProdutoId" disabled>Clientes</a>
           
            </td>
        </tr>
}
    </tbody>
</table>
